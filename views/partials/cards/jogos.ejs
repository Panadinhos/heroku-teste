<div class="row">
  <% for (var i in data) { %>
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 d-flex align-items-stretch">
      <div class="card shadow" style="width: 18rem;">
        <div class="container">
          <div class="inner">
            <img src="<%=data[i]['img'][0]%>" class="card-img-top"/>
          </div>
          <div class="card-body">
            <h5 class="card-title">
                <%= data[i]["title"][0] %>
            </h5>
            <p class="card-text">
              <%= data[i]["sinopse"][0] %>
              <br>
            </p>
            <p class="cardplat">
              <strong>Plataformas: </strong> <%= data[i]["platforms"][0] %>
              <br>
            </p>
            <a class="btn btn-primary" id="btn" onclick="window.open('<%= data[i]["teaser"][0] %>')">Ver teaser</a>
            <a class="btn btn-info" name="name" href="/jogos/<%= data[i]["title"][0] %>">Detalhes</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
